<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xdwonder.igriscavblizini.activity_search">

    <Button
        android:text="SEARCH"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toRightOf="@+id/linear_layout"
        app:layout_constraintLeft_toLeftOf="@+id/linear_layout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:id="@+id/linear_layout"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp">

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
